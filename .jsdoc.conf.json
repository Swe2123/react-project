{
  "source": {
    "include": ["./app", "./components", "./lib"],
    "includePattern": "\\.(js|jsx)$",
    "exclude": ["node_modules/", "./app/globals.css"]
  },
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "readme": "./README.md"
  },
  "plugins": [
    "plugins/markdown",
    "better-docs/component"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}